{
    "name": "toad.js",
    "version": "0.0.24",
    "description": "The TOAD JavaScript/TypeScript GUI Library",
    "author": "Mark-Andr√© Hopf <mhopf@mark13.org>",
    "license": "AGPL-3.0",
    "engines": {
        "npm": ">=8.1.2",
        "node": ">=16.10.0"
    },
    "exports": {
        ".": {
            "import": "./lib/src/index.js",
            "types": "./lib/src/index.d.ts"
        },
        "./*": {
            "import": "./lib/src/*.js",
            "types": "./lib/src/*.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            "*": [
                "lib/src/*.d.ts"
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/markandre13/toad.js.git"
    },
    "scripts": {
        "build": "ttsc",
        "test": "wtr \"lib/test/**/*.spec.js\"",
        "e2e": "npm run e2e-once:build && concurrently -k \"npm:e2e:*\"",
        "e2e-once:build": "rollup --bundleConfigAsCjs --config e2e/rollup.config.js",
        "e2e:build": "rollup --watch --bundleConfigAsCjs --config e2e/rollup.config.js",
        "e2e:httpd": "http-server --silent -c -1",
        "e2e:mocha": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --slow 5000 ---timeout 10000 -r ts-node/register --watch --watch-files e2e/**/*.spec.ts,e2e/**/*.html e2e/**/*.spec.ts",
        "dev:build": "ttsc --watch",
        "dev:build:trace-warnings": "node --trace-warnings ./node_modules/.bin/ttsc --watch",
        "dev:test": "if test -z \"$npm_config_file\" ; then wtr --watch 'lib/test/**/*.spec.js' ; else wtr --watch \"$npm_config_file\" ; fi",
        "dev:e2e": "",
        "dev:serve": "wds --node-resolve --watch --open --app-index docs/index.dev.html",
        "build:docs": "hash=`date | shasum` ; hash=${hash%% *} ; rollup --bundleConfigAsCjs --config docs/rollup.config.js && sed \"s|../lib/docs/main.js|main.js?hash=${hash}|;s|../style/|style/|g;s|../polyfill/||\" docs/index.dev.html > docs/index.html && mkdir -p docs/style && cp style/* docs/style",
        "build:html": "typedoc --categorizeByGroup --excludeInternal --out html src",
        "update": "npx npm-check-updates -u && npm install"
    },
    "devDependencies": {
        "@esm-bundle/chai": "^4.3.4-fix.0",
        "@rollup/plugin-node-resolve": "^15.0.2",
        "@rollup/plugin-terser": "^0.4.1",
        "@types/chai": "^4.3.5",
        "@types/chai-subset": "^1.3.3",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.2.1",
        "@types/pixelmatch": "^5.2.4",
        "@types/pngjs": "^6.0.1",
        "@web/dev-server": "^0.2.1",
        "@web/test-runner": "^0.16.1",
        "chai": "^4.3.7",
        "concurrently": "^8.0.1",
        "http-server": "^14.1.1",
        "mocha": "^10.2.0",
        "pixelmatch": "^5.3.0",
        "pngjs": "^7.0.0",
        "puppeteer": "^20.2.1",
        "rollup-plugin-typescript2": "^0.34.1",
        "ts-node": "^10.9.1",
        "ttypescript": "^1.5.15",
        "typedoc": "^0.24.7",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@webcomponents/webcomponentsjs": "^2.8.0",
        "toad.jsx": "^0.0.4"
    }
}
