{
    "name": "toad.js",
    "version": "0.0.24",
    "description": "The TOAD JavaScript/TypeScript GUI Library",
    "author": "Mark-Andr√© Hopf <mhopf@mark13.org>",
    "license": "AGPL-3.0",
    "engines" : { 
        "npm" : ">=8.1.2",
        "node" : ">=16.10.0"
    },
    "exports": {
        ".": {
            "import": "./lib/src/index.js",
            "types": "./lib/src/index.d.ts"
        },
        "./*": {
            "import": "./lib/src/*.js",
            "types": "./lib/src/*.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            "*": [ "lib/src/*.d.ts"]
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/markandre13/toad.js.git"
    },
    "scripts": {
        "build": "ttsc",
        "test": "wtr \"lib/test/**/*.spec.js\"",
        "build:watch": "ttsc --watch",
        "test:watch": "wtr \"lib/test/**/*.spec.js\" --watch",
        "update": "npx npm-check-updates -u && npm install",
        "build:docs": "rollup --config docs/rollup.config.js"
    },
    "devDependencies": {
        "@esm-bundle/chai": "^4.3.4-fix.0",
        "@types/chai": "^4.3.0",
        "@types/chai-subset": "^1.3.3",
        "@types/mocha": "^9.1.0",
        "@web/test-runner": "^0.13.26",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
        "ttypescript": "^1.5.13",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@webcomponents/webcomponentsjs": "^2.6.0",
        "toad.jsx": "^0.0.3"
    }
}
