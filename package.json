{
    "name": "toad.js",
    "version": "0.0.24",
    "description": "The TOAD JavaScript/TypeScript GUI Library",
    "author": "Mark-Andr√© Hopf <mhopf@mark13.org>",
    "license": "AGPL-3.0",
    "engines": {
        "npm": ">=8.1.2",
        "node": ">=16.10.0"
    },
    "exports": {
        ".": {
            "import": "./lib/src/index.js",
            "types": "./lib/src/index.d.ts"
        },
        "./*": {
            "import": "./lib/src/*.js",
            "types": "./lib/src/*.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            "*": [
                "lib/src/*.d.ts"
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/markandre13/toad.js.git"
    },
    "scripts": {
        "build": "ttsc",
        "test": "wtr \"lib/test/**/*.spec.js\"",
        "dev:build": "ttsc --watch",
        "dev:test": "if test -z \"$npm_config_file\" ; then wtr --watch lib/test ; else wtr --watch $npm_config_file; fi",
        "dev:serve": "wds --node-resolve --watch --open --app-index docs/index.dev.html",
        "build:docs": "rollup --config docs/rollup.config.js && sed 's|../lib/docs/main.js|main.js|;s|../style/|style/|g;s|../polyfill/||' docs/index.dev.html > docs/index.html",
        "update": "npx npm-check-updates -u && npm install"
    },
    "devDependencies": {
        "@esm-bundle/chai": "^4.3.4-fix.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@types/chai": "^4.3.1",
        "@types/chai-subset": "^1.3.3",
        "@types/mocha": "^9.1.1",
        "@web/dev-server": "^0.1.31",
        "@web/test-runner": "^0.13.27",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.31.2",
        "ttypescript": "^1.5.13",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "@webcomponents/webcomponentsjs": "^2.6.0",
        "toad.jsx": "^0.0.3"
    }
}
